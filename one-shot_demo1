    <!-- JavaScript for interactivity -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Toggle mobile navigation
        const menuToggle = document.querySelector('.menu-toggle');
        const navList = document.querySelector('nav ul');
        menuToggle.addEventListener('click', () => {
          navList.classList.toggle('open');
        });

        // Jokes data
        const jokes = [
          {
            setup:
              'Why did the Florida Blue member bring a life jacket to his policy meeting?',
            punchline:
              'Because he heard he was getting covered for “swimming in paperwork”!',
          },
          {
            setup: 'Florida Blue has been serving Floridians since 1944.',
            punchline:
              "That's eighty years of figuring out how to make a phone call sound like a warm hug.",
          },
          {
            setup: 'What’s blue but leaves everyone smiling?',
            punchline:
              "Florida Blue’s member benefits—and maybe a Smurf on vacation.",
          },
          {
            setup: 'Why does Florida Blue love sunny days?',
            punchline:
              'Because even their plans like to catch some rays!',
          },
          {
            setup: 'What’s Florida Blue’s favorite workout?',
            punchline:
              "Crunching numbers. But they'll also cover your gym membership for actual crunches.",
          },
          {
            setup: 'Why did the health insurance card enroll in yoga?',
            punchline: 'To learn how to be flexible in all the right places.',
          },
          {
            setup: 'Florida Blue’s call center is so friendly,',
            punchline:
              'the hold music is just someone reminding you to drink water.',
          },
          {
            setup: 'Why did the policy cross the road?',
            punchline:
              'To get to the Florida Blue Center opened in 2006—where it could talk face to face.',
          },
          {
            setup: 'What do you call Florida Blue’s online portal?',
            punchline:
              'Your health’s BFF. It even understands when you type, “Why does my knee make that noise?”.',
          },
          {
            setup: 'How does Florida Blue stay so calm during hurricane season?',
            punchline:
              'Decades of practice handling storms of paperwork.',
          },
          {
            setup: 'Why doesn’t Florida Blue get sunburned at the beach?',
            punchline: "Because it's always fully covered.",
          },
          {
            setup:
              'Why did Florida Blue become the largest single‑state provider of individual marketplace plans?',
            punchline: 'Because they heard “go big or go home” and chose both.',
          },
          {
            setup: 'What’s Florida Blue’s favorite type of coverage?',
            punchline: 'Smile coverage. It’s 100% guaranteed on this page.',
          },
        ];

        // Render jokes into the page
        const jokesList = document.getElementById('jokes-list');
        jokes.forEach((joke) => {
          const card = document.createElement('div');
          card.className = 'joke-container';
          card.innerHTML =
            '<div class="setup">' +
            joke.setup +
            '</div><div class="punchline">' +
            joke.punchline +
            '</div>';
          card.addEventListener('click', () => {
            card.classList.toggle('open');
          });
          jokesList.appendChild(card);
        });

        // Random joke generator
        const randomBtn = document.getElementById('random-btn');
        const randomDisplay = document.getElementById('random-display');
        randomBtn.addEventListener('click', () => {
          const index = Math.floor(Math.random() * jokes.length);
          const joke = jokes[index];
          randomDisplay.innerHTML =
            '<strong>' + joke.setup + '</strong><br>' + joke.punchline;
        });

        // Contact form handling
        const contactForm = document.getElementById('contact-form');
        const formMessage = document.getElementById('form-message');
        contactForm.addEventListener('submit', (e) => {
          e.preventDefault();
          // Display a friendly confirmation message
          formMessage.textContent =
            'Thanks for reaching out! We will respond faster than Florida weather changes.';
          // Clear form fields
          contactForm.reset();
        });
      });
    </script>
